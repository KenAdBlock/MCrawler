<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" stylesheets="@../assets/css/page.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mcrawler.controller.PageController">
   <children>
      <Label fx:id="title" layoutX="14.0" layoutY="7.0" text="PAGE">
         <font>
            <Font name="Roboto Bold" size="24.0" />
         </font></Label>
      <JFXButton fx:id="deletePage" layoutX="340.0" layoutY="7.0" mnemonicParsing="false" onAction="#deletePageClick" styleClass="btn-delete" stylesheets="@../assets/css/menu.css">
         <font>
            <Font name="Roboto Regular" size="18.0" />
         </font>
      </JFXButton>
      <ScrollPane fx:id="scrollPane" layoutX="0.0" layoutY="37.0" prefHeight="430.0" prefWidth="400.0" styleClass="edge-to-edge" stylesheets="@../assets/css/page.css">
      <content>
      <GridPane fx:id="pageContainer" layoutX="14.0" layoutY="7.0" prefHeight="430.0" prefWidth="370.0" stylesheets="@../assets/css/page.css">
      </GridPane>
      </content>
      </ScrollPane>
      <JFXButton fx:id="btnDelete" graphicTextGap="0.0" layoutX="14.0" layoutY="437.0" mnemonicParsing="false" onAction="#btnDeleteClick" styleClass="primary-btn" stylesheets="@../assets/css/page.css" text="Delete">
         <font>
            <Font name="Roboto Bold" size="25.0" />
         </font></JFXButton>
      <JFXButton fx:id="btnView" graphicTextGap="0.0" layoutX="320.0" layoutY="437.0" mnemonicParsing="false" onAction="#btnViewClick" styleClass="primary-btn" stylesheets="@../assets/css/page.css" text="View">
         <font>
            <Font name="Roboto Bold" size="25.0" />
         </font></JFXButton>
   </children>
</AnchorPane>
